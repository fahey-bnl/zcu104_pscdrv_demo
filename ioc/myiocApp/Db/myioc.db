
record(bi, "$(P)Conn-Sts") {
    field(DTYP, "PSC Ctrl Connected")
    field(DESC, "Connection status")
    field(INP , "@$(ONAME)")
    field(SCAN, "I/O Intr")
    field(ZNAM, "Disconnected")
    field(ONAM, "Connected")
    field(ZSV , "MAJOR")
}

record(stringin, "$(P)Msg-I") {
    field(DTYP, "PSC Ctrl Message")
    field(DESC, "Last message")
    field(INP , "@$(ONAME)")
    field(SCAN, "I/O Intr")
}

record(longout, "$(P)Send:4") {
    field(DTYP, "PSC Ctrl Send")
    field(OUT , "@$(ONAME)")
    field(VAL , "4") # message ID
    field(FLNK, "$(P)Send")
}

record(bo, "$(P)Send") {
    field(DTYP, "PSC Ctrl Send All")
    field(OUT , "@$(ONAME)")
    field(ZNAM, "Send")
    field(ONAM, "Send")
}

record(calcout, "togglePV") {
    field(DESC, "toggles btwn 0 and 1")
    field(CALC, "A?0:1")
    field(SCAN, "5 second")
    field(INPA, "togglePV")
    field(OUT, "pscReg PP")
}

record(longout, "pscReg") {
    field(DTYP, "PSC Single I32")
    field(OUT, "@$(ONAME) 4 4")
    field(FLNK, "$(P)Send:4")
}

